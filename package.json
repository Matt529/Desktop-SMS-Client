{
  "name": "desktopsmsclient",
  "version": "0.2.0",
  "main": "./main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rmdir /s /q \"./dist\"",
    "clean:osx": "rmdir /s /q \"./dist/osx\"",
    "clean:win": "rmdir /s /q \"./dist/win\"",
    "build": "npm run clean && npm run build:odx && npm run build:win",
    "build:osx": "npm run clean:osx && electron-packager . Desktop-SMS-Client --out=dist/osx --platform=darwin --arch=x64 --version=0.35.2 --icon=assets/osx/loopline.icns",
    "build:win": "npm run clean:win && electron-packager . Desktop-SMS-Client --out=dist/win --platform=win32 --arch=ia32 --version=0.35.2 --icon=assets/win/icon.ico --ignore=\"(node_modules/(?!node-notifier|unirest|jquery))|(packager)|(git)\"",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run build:osx && electron-builder dist/osx/Desktop-SMS-Client.app --platform=osx --out=dist/osx --config=packager.json",
    "pack:win": "npm run build:win && electron-builder dist/win/Desktop-SMS-Client-win32-ia32 --platform=win --out=dist/win --config=packager.json"
  },
  "author": "Justin Tervay",
  "license": "MIT",
  "devDependencies": {
    "electron-builder": "^2.3.0",
    "electron-packager": "^5.1.1",
    "electron-prebuilt": "^0.35.2",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-electron": "0.0.9",
    "gulp-ignore": "^2.0.1",
    "gulp-jshint": "^2.0.0",
    "gulp-minify-css": "^1.2.2",
    "gulp-rename": "^1.2.2",
    "gulp-rimraf": "^0.2.0",
    "gulp-uglify": "^1.5.1",
    "jshint": "^2.8.0",
    "rimraf": "^2.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jtervay97/Desktop-SMS-Client.git"
  },
  "bugs": {
    "url": "https://github.com/jtervay97/Desktop-SMS-Client/issues"
  },
  "homepage": "https://github.com/jtervay97/Desktop-SMS-Client#readme",
  "description": "",
  "dependencies": {
    "jquery": "^2.1.4",
    "node-notifier": "^4.3.1",
    "unirest": "^0.4.2"
  }
}
